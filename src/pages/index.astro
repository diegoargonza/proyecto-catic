---
import Layout from '../layouts/Layout.astro';


//Imagenes para el carrusel
import bgImageR24 from "../../public/img/bnr_resultados24.webp";
import bgImage0 from "../../public/img/bannerPrincipios.webp";
import bgImage1 from "../../public/img/bnr_conv24.webp";
import bgImage2 from "../../public/img/bnr_catalogo24.webp";
import bgImage3 from "../../public/img/bnr_censoTIC_24.webp";
import bgImage4 from "../../public/img/bannerR24.webp";
import bgImage5 from "../images/acuerdo2.webp";



---

<Layout title="CATIC">
	<main class="mb-14">

		<!--Carrusel de imagenes -->
		<div class="flex flex-col justify-center items-center mt-5 mb-5 md:mb-10">
			<div id="default-carousel" class="relative w-11/12 sm:w-[540px] md:w-[780px] sm:h-4/5" data-carousel="slide" data-carousel-interval="7000">
				<!-- Carousel wrapper -->
				<div class="relative h-56 overflow-hidden rounded-lg md:h-96">
					<!-- Item 6 -->
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="/censo24/"><img src={bgImage3} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Censo TIC 2024"></a>
					</div>
					<!-- Item  1--> 
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="/docs/Proceso_de_registro_de_alta_a_reserva_2024.pdf" target="_blank"><img src={bgImageR24} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt=""></a>
					</div>
					<!-- Item  2-->
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="https://www.red-tic.unam.mx/recursos/2024/2024_Principios_SWLibre.pdf" target="_blank"><img src={bgImage0} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Principios del software libre y código abierto en la UNAM"></a>
					</div>
					<!-- Item 3 -->
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="/docs/catic24_resultados_convocatoria2024.pdf" target="_blank"><img src={bgImage4} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Resultados Convocatoria 2023"></a>
					</div>
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="/docs/catic_convocatoria_2024.pdf" target="_blank"><img src={bgImage1} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Catálogo Base 2024"></a>
					</div>
					<!-- Item 5 -->
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<a href="/docs/CatalogoBase-2024-110324.pdf" target="_blank"><img src={bgImage2} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Catalogo base 2023"></a>
					</div>
				
					

					
					
				</div>
	
				<!-- Slider indicators -->
				<div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2 mt-6 bottom-8 xs:bottom-2 md:bottom-5">
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="true" aria-label="Slide 0" data-carousel-slide-to="0"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="true" aria-label="Slide 0" data-carousel-slide-to="0"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="false" aria-label="Slide 1" data-carousel-slide-to="1"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="2"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="false" aria-label="Slide 3" data-carousel-slide-to="3"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="false" aria-label="Slide 4" data-carousel-slide-to="4"></button>
					<button type="button" class="w-3 h-3 rounded-full border border-sky-900" aria-current="false" aria-label="Slide 5" data-carousel-slide-to="5"></button>
				</div>
	
				<!-- Slider controls -->
				<button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
					<span class="inline-flex items-center justify-center w-8 h-8 rounded-full sm:w-10 sm:h-10 bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
						<svg aria-hidden="true" class="w-5 h-5 text-white sm:w-6 sm:h-6 dark:text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
						<span class="sr-only">Previous</span>
					</span>
				</button>
				<button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
					<span class="inline-flex items-center justify-center w-8 h-8 rounded-full sm:w-10 sm:h-10 bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
						<svg aria-hidden="true" class="w-5 h-5 text-white sm:w-6 sm:h-6 dark:text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
						<span class="sr-only">Next</span>
					</span>
				</button>
			</div>
		</div>
		

		<!--Tarjetas-->
		<section class="flex justify-center">			
			<div class="card">
				<div class="card-img">
				  <div class="triangle to-indigo-800 to-50%"></div>
				  <img src={bgImage5} alt="" class="col-span-10 hover:cursor-pointer" />
				</div>
				<div class="title bg-indigo-500"> Quienes somos</div>
			  </div>
	  
			  <div class="card">
				<div class="card-img">
				  <div class="triangle to-rose-800 to-50%"></div>
				  <img src={bgImage5} alt="" class="col-span-10 hover:cursor-pointer" />
				</div>
				<div class="title bg-rose-500"> Consejeros</div>
			  </div>
	
			  <div class="card">
				<div class="card-img">
				  <div class="triangle to-amber-800 to-50%"></div>
				  <img src={bgImage5} alt="" class="col-span-10  hover:cursor-pointer" />
				</div>
				<div class="title bg-amber-500">Acuerdos</div>
			  </div>
	
			  <div class="card">
				<div class="card-img">
				  <div class="triangle to-green-800 to-50%"></div>
				  <img src={bgImage5} alt="" class="col-span-10 hover:cursor-pointer" />
				</div>
				<div class="title bg-green-600">Convocatorias</div>
			  </div>
		</section>
	</main>

</Layout>